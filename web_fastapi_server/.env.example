# Database Configuration
DATABASE_URL=postgresql+asyncpg://trader:password@localhost:5432/trading_system

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Performance
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true

# Order Processing Configuration
MARKET_ORDER_TIMEOUT=10
CANCEL_QUEUE_INTERVAL=10
MAX_CANCEL_RETRIES=5

# Exchange API Keys (Phase 3)
# Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# Bybit
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_api_secret

# Upbit
UPBIT_API_KEY=your_upbit_access_key
UPBIT_API_SECRET=your_upbit_secret_key

# Exchange Settings (Phase 3)
EXCHANGE_TIMEOUT=30
EXCHANGE_MAX_RETRIES=3

# Exchange Rate Limits (requests per second)
BINANCE_RATE_LIMIT=10.0
BYBIT_RATE_LIMIT=10.0
UPBIT_RATE_LIMIT=8.0

# Mock Exchange (Phase 2/3 테스트)
USE_MOCK_EXCHANGE=true

# Application
ENV=development
DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging
LOG_LEVEL=INFO
