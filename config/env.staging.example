# Staging Environment Configuration
# 스테이징 환경 설정 파일

# Flask 설정
FLASK_ENV=staging
SECRET_KEY=staging-secret-generate-strong-random-key
DEBUG=False

# 데이터베이스 설정 (PostgreSQL 필수, Docker 기반)
DATABASE_URL=postgresql://trader:password123@postgres:5432/trading_staging

# SSL/HTTPS 설정 (개발과 동일)
ENABLE_SSL=true
FORCE_HTTPS=true
SSL_DOMAIN=localhost
SSL_CERT_DIR=certs
PORT=443
HSTS_MAX_AGE=31536000

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
BACKGROUND_LOG_LEVEL=WARNING

# 세션 설정
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# APScheduler 설정
SCHEDULER_API_ENABLED=True

# 스테이징 환경 설정
SKIP_EXCHANGE_TEST=False  # 거래소 연결 테스트 실행

# 텔레그램 봇 설정 (선택사항)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# PostgreSQL 커넥션 풀 설정 (선택사항)
# SQLALCHEMY_POOL_SIZE=10
# SQLALCHEMY_POOL_TIMEOUT=20
# SQLALCHEMY_MAX_OVERFLOW=0