# Production Environment Configuration
# 프로덕션 환경 설정 파일
# ⚠️ 보안 주의: 실제 프로덕션에서는 강력한 비밀번호와 키를 사용하세요

# Flask 설정
FLASK_ENV=production
SECRET_KEY=<generate-very-strong-random-key-min-32-chars>
DEBUG=False

# 데이터베이스 설정 (PostgreSQL 필수, Docker 기반)
# 프로덕션에서는 강력한 비밀번호 사용 필수
DATABASE_URL=postgresql://trader:very_secure_password@postgres:5432/trading_prod

# SSL/HTTPS 설정 (필수)
ENABLE_SSL=true
FORCE_HTTPS=true
SSL_DOMAIN=localhost  # 정식 서비스 시 실제 도메인으로 변경
SSL_CERT_DIR=certs
PORT=443
HSTS_MAX_AGE=31536000  # 1년

# 로깅 설정 (프로덕션은 WARNING 이상만)
LOG_LEVEL=WARNING
LOG_FILE=logs/app.log
BACKGROUND_LOG_LEVEL=ERROR

# 세션 보안 설정 (강화)
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
PERMANENT_SESSION_LIFETIME=3600
WTF_CSRF_TIME_LIMIT=None  # CSRF 토큰 만료 없음

# APScheduler 설정
SCHEDULER_API_ENABLED=True

# 프로덕션 환경 설정
SKIP_EXCHANGE_TEST=False  # 거래소 연결 테스트 실행

# 텔레그램 봇 설정 (프로덕션 알림)
TELEGRAM_BOT_TOKEN=your-production-bot-token
TELEGRAM_CHAT_ID=your-production-chat-id

# PostgreSQL 커넥션 풀 설정 (프로덕션 최적화)
# SQLALCHEMY_POOL_SIZE=20
# SQLALCHEMY_POOL_TIMEOUT=30
# SQLALCHEMY_MAX_OVERFLOW=10
# SQLALCHEMY_POOL_RECYCLE=3600  # 1시간마다 연결 재생성

# 성능 최적화 설정
# SQLALCHEMY_ECHO=False  # SQL 로깅 비활성화
# SEND_FILE_MAX_AGE_DEFAULT=31536000  # 정적 파일 캐시 1년

# 보안 헤더 추가 설정 (선택사항)
# SECURITY_HEADERS_X_FRAME_OPTIONS=DENY
