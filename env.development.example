# Development Environment Configuration
# 개발 환경 설정 파일

# Flask 설정
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-this-in-production
DEBUG=True

# 데이터베이스 설정 (PostgreSQL 필수)
# Docker를 사용하는 경우: postgres (컨테이너 이름)
# 로컬 PostgreSQL의 경우: localhost
DATABASE_URL=postgresql://trader:password123@localhost:5432/trading_dev

# 로깅 설정
LOG_LEVEL=DEBUG
LOG_FILE=logs/dev_app.log
BACKGROUND_LOG_LEVEL=DEBUG

# SSL/HTTPS 설정 (개발 환경에서는 비활성화)
ENABLE_SSL=false
FORCE_HTTPS=false
PORT=5001

# 텔레그램 봇 설정 (선택사항)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# 개발 환경 전용 설정
SKIP_EXCHANGE_TEST=False  # 거래소 연결 테스트 실행

# APScheduler 설정
SCHEDULER_API_ENABLED=True

# 세션 설정 (개발용)
SESSION_COOKIE_SECURE=False  # HTTP 허용
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=7200  # 2시간